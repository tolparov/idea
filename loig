try {
                    val kafkaEvent = KafkaUpdateEvent(
                        id = record.offset().toString(),
                        timestamp = LocalDateTime.now(),
                        triggerName = key  // ‚Üê –ö–ª—é—á –∏–∑ Kafka
                    )
                    KafkaDelayerReceptionist.notify(kafkaEvent)
                    log.debug("üîÑ Cache refresh triggered by key: {}", key)
                } catch (e: Exception) {
                    log.warn("‚ö†Ô∏è Failed to notify KafkaDelayerReceptionist: {}", e.message)
                }
